{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNEXT",
    "jsx": "preserve",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmit": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
